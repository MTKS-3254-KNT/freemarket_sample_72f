.sale

  -# ヘッダー
  .header
    =link_to "/" ,class:"header-link" do
      = image_tag "material/logo/logo.png" ,class:"header-image"
  
  
  -# メイン
  .main
  
  
    -# 投稿フォーム
    = form_with(model: @item, local: true, id: "item-dropzone", class: "sell-form dropzone") do |f|

      -# 画像投稿機能
      .item-box
        -# 出品画像
        .item-image
          .item-image__top
            .item-image__top__title
              出品画像
            .certainly
              必須
          .item-image__max-upload 最大10枚までアップロードできます
          -# 画像投稿フォーム
          .item-image__form
            #preview
              .num-0#image-container
                %label
                  = f.fields_for :images do |image|
                    .input-area
                      = image.file_field :image, type: 'file', name: "images[image][]", id: "upload-image", style: "display:none"
                      %i.fas.fa-camera
          -# .error-messages
      
      .border
      
      -# 商品名
      .item-box
        .item-name
          .item-name__top
            .item-name__top__title
              商品名
            .certainly
              必須
          .item-name__form
            .item-name__form__body
              = f.text_field :name, {class:"item-name__form__body__field", required:"required", placeholder:"40文字まで" } 
        
        -# 商品の説明
        .item-int
          .item-int__top
            .item-int__top__title
              商品の説明
            .certainly
              必須
          .item-int__form
            = f.text_area :introduction, {class: "item-int__form__area", required: "required", placeholder: "商品の説明（必須 1,000文字以内）\n（色、素材、重さ、定価、注意点など）\n\n例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。",maxlength: '1000'}
            .item-int__form__count 0/1000
      .border
      
      -# 商品の詳細
      .item-box
        .item-head 商品の詳細
        -# カテゴリー
        .item-category
          .item-category__top
            .item-category__top__title
              カテゴリー
            .certainly
              必須
          .item-category__form
            .item-category__form__body
              = f.label :category_id, class: "item-category__form__body__label" do
                = f.select :category_id, ["選択してください",["レディース", "1"]],{}, {class: "item-category__form__body__label__select"}
                .item-category__form__body__label__box
                  %i.fas.fa-chevron-down.item-category__form__body__label__box__icon
        
        -# ブランド
        .item-brand
          .item-brand__top
            .item-brand__top__title
              ブランド
            .optional
              任意
          .item-brand__form
            .item-brand__form__body
              = f.text_field :brand_id, {class:"item-brand__form__body__field", placeholder: '例）シャネル'}
        
        -# 商品の状態
        .item-condition
          .item-condition__top
            .item-condition__top__title
              商品の状態
            .certainly
              必須
          .item-condition__form
            .item-condition__form__body
              = f.label :condition, class: "item-condition__form__body__label" do
                = f.select :condition, ["選択してください","新品、未使用", "未使用に近い","目立った傷や汚れなし","やや汚れや傷あり","傷や汚れあり","全体的に状態が悪い"],{}, {class: "item-condition__form__body__label__select" }
                .item-condition__form__body__label__box
                  %i.fas.fa-chevron-down.item-condition__form__body__label__box__icon
      
      .border
      
      -# 配送について
      .item-box
        .item-head 配送について
        -# 配送料の負担
        .item-post
          .item-post__top
            .item-post__top__title
              配送料の負担
            .certainly
              必須
          .item-post__form
            .item-post__form__body
              = f.label :category, class: "item-post__form__body__label" do
                = f.select :postage_payer, ["選択してください","送料込み(出品者負担)", "着払い(購入者負担)"],{}, {class: "item-post__form__body__label__select"}
                .item-post__form__body__label__box
                  %i.fas.fa-chevron-down.item-post__form__body__label__box__icon
        
        -# 発送元の地域
        .item-code
          .item-code__top
            .item-code__top__title
              発送元の地域
            .certainly
              必須
          .item-code__form
            .item-code__form__body
              = f.label :prefecture_code, class: "item-code__form__body__label" do
                = f.select :prefecture_code, ["選択してください","北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"],{}, {class:"item-code__form__body__label__select"}
                .item-code__form__body__label__box
                  %i.fas.fa-chevron-down.item-code__form__body__label__box__icon
        
        -# 発送までの日数
        .item-day
          .item-day__top
            .item-day__top__title
              発送までの日数
            .certainly
              必須
          .item-day__form
            .item-day__form__body
              = f.label :preparation_day, class: "item-day__form__body__label" do
                = f.select :preparation_day, ["選択してください","1~2日で発送", "2~3日で発送","4~7日で発送"],{}, {class: "item-day__form__body__label__select"}
                .item-day__form__body__label__box
                  %i.fas.fa-chevron-down.item-day__form__body__label__box__icon
      
      .border
      
      -# 価格・出品ボタン
      .item-box
        .item-head 価格（¥300〜9,999,999）
        -# 販売価格
        .item-price
          .item-price__text
            .item-price__text__top
              .item-price__text__top__title
                販売価格
              .certainly
                必須
          .item-price__form
            .item-price__form__en ¥
            .item-price__form__body
              = f.label :price, class:"item-price__form__body__lavel" do
                = f.number_field :price, {min: 300, max: 9999999, placeholder:'0', class:"item-price__form__body__lavel__field", required:"required" }
        -# .item-price-error 300以上 9,999,999以下で入力してください
        
        -# 販売手数料
        .item-charge
          .item-charge__text
            .item-charge__text__title
              販売手数料（10%）
          .item-price__charge-calc
            .item-price__charge-calc__data —
        .border
        -# 販売利益
        .item-Sales
          .item-Sales__text
            .item-Sales__text__title
              販売利益
          .item-Sales__charge-calc
            .item-Sales__charge-calc__data ¥ 0
        
        
        -# 出品ボタン
        .submit-btn
          = f.submit '出品する', class: 'submit-btn__sale'
          = link_to '下書きに保存', "#", class: 'submit-btn__draft'
          = link_to 'もどる', "#", class: 'submit-btn__return'
        
        -# 注意書き
        .attention
          %p.attention__text
            禁止されている
            = link_to '行為', '#', class:'attention__text--color'
            および
            = link_to '出品物', '#', class:'attention__text--color'
            を必ずご確認ください。
            = link_to '偽ブランド品', '#', class:'attention__text--color'
            や
            = link_to '盗品物', '#', class:'attention__text--color'
            などの販売は犯罪であり、法律により処罰される可能性があります。また、出品をもちまして
            = link_to '加盟店規約', '#', class:'attention__text--color'
            に同意したことになります。

= render 'layouts/item-footer'
